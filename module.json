{
	"name": "VLC",
	"type": "HTTP",
	"path": "Software",
	
	"version": "1.0.3",
	"description": "Control VLC through HTTP. This module requires at least version 1.7.3b1 of Chataigne ! If you're having troubles, please click the link below and see how to set it up.",
	"url":"https://github.com/benkuper/VLC-Chataigne-Module",
	"downloadURL": "https://github.com/benkuper/VLC-Chataigne-module/archive/master.zip",
	
	"hasInput": true,
	"hasOutput": true, 

	"hideDefaultCommands": true,
	"hideDefaultParameters": [
		"protocol",
		"autoAdd"
	],
	
	"defaults": {
		"baseAddress":"http://127.0.0.1:8080/",
		"autoAdd": false,
		"protocol":"XML",
		"authentication":
		{
			"enabled":true
		}
	},
	
	"parameters": {
		"Auto Update State": {"type": "Boolean"}
	},
	
	"scripts": [
		"VLC.js"
	],
	
	"values":
	{
		"Fullscreen":{
			"type": "String",
			"readOnly": true
		},
		"Time":{
			"type": "String",
			"readOnly": true
		},
		"Length": {
			"type": "String",
			"readOnly": true
		},
		"Volume":{
			"type": "String",
			"readOnly": true
		},
		"Loop":{
			"type": "String",
			"readOnly": true
		},
		"Video name": {
			"type": "String",
			"readOnly": true
		},
		"State": {
			"type": "String",
			"readOnly": true
		}
	},
	
	"commands": {
		
		"Update status":
		{
			"menu":"",
			"callback":"updateData"
		},

		"Play":
		{
			"menu":"",
			"callback":"play"
		},

		"Toggle Play/Pause":
		{
			"menu":"",
			"callback":"pause"
		},

		"Stop":
		{
			"menu":"",
			"callback":"stop"
		},

		"Previous":
		{
			"menu": "",
			"callback": "previous",
			"parameters": {
			}
		},

		"Next":
		{
			"menu": "",
			"callback": "next",
			"parameters": {
			}
		},

		"Play File":
		{
			"menu": "",
			"callback": "playFile",
			"parameters": {
				"File": {
					"type": "File"
				}
			}
		},

		"Toggle Loop":
		{
			"menu":"",
			"callback":"toggleLoop"
		},

		"Toggle Fullscreen":
		{
			"menu":"",
			"callback":"toogleFullscreen"
		},

		"Seek to":
		{
			"menu":"",
			"callback":"seekTo",
			"parameters": {
				"Seek": {
					"type": "String",
					"default": "0"
				}
			}
		},

		"Set Volume":
		{
			"menu": "",
			"callback": "setVolume",

			"parameters": {
				"Volume": {
					"type": "Float",
					"default": 0.5, 
					"min":0,
					"max":1.25,
					"useForMapping": true
				}
			}
		}

	}
}
